{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://everse.software/indicator_schema.json",
    "type": "object",
    "default": {},
    "title": "EVERSE indicator schema",
    "required": [
        "identifier",
        "name",
        "description",
        "keywords",
        "type",
        "subtype",
        "release-date",
        "version",
        "doi",
        "authors"
    ],
    "properties": {
        "identifier": {
            "type": "string",
            "default": "",
            "title": "The identifier of the indicator",
            "examples": [
                "Some-Identifier"
            ]
        },
        "name": {
            "type": "string",
            "default": "",
            "title": "The name of the indicator",
            "examples": [
                "indicator name"
            ]
        },
        "description": {
            "type": "string",
            "default": "",
            "title": "The description of the indicator",
            "examples": [
                "a short description of the indicator"
            ]
        },
        "keywords": {
            "type": "array",
            "default": [],
            "title": "The keywords of the indicator",
            "items": {
                "type": "string",
                "title": "A keyword for the indicator",
                "enum": ["keyword-1", "keyword-2", "keyword-3"],
                "examples": [
                    "keyword-1",
                    "keyword-2"
                ]
            }
        },
        "type": {
            "type": "array",
            "default": [],
            "title": "The type of the indicator",
            "items": {
                "type": "string",
                "title": "The type of the indicator",
                "examples": [
                    "fair",
                    "quality",
                    "other"
                ]
            }
        },
        "subtype": {
            "type": "array",
            "default": [],
            "title": "The subtype of the indicator",
            "items": {
                "type": "string",
                "title": "A Schema",
                "examples": [
                    "fair",
                    "accessible",
                    "interoperable",
                    "reusable"
                ]
            }
        },
        "release-date": {
            "type": "string",
            "default": "",
            "title": "The release-date of the indicator",
            "examples": [
                "01-01-1900",
                "31-12-2024"
            ],
            "format": "date",
            "pattern": "^(0[1-9]|[12][0-9]|3[01])-(0[1-9]|1[012])-[0-9]{4}$"
        },
        "version": {
            "type": "string",
            "default": "",
            "title": "The version of the indicator",
            "examples": [
                "0.0.1",
                "v0.0.1"
            ]
        },
        "doi": {
            "type": "string",
            "default": "",
            "title": "The doi of the indicator",
            "examples": [
                "10.5281/zenodo.0000000"
            ]
        },
        "authors": {
            "type": "object",
            "default": {},
            "title": "The authors of the indicator",
            "required": [
                "name",
                "type",
                "orcid",
                "email"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "default": "",
                    "title": "The name of the authors",
                    "examples": [
                        "maintainer name"
                    ]
                },
                "type": {
                    "type": "array",
                    "default": [],
                    "title": "The type of the authors",
                    "items": {
                        "type": "string",
                        "title": "A of the authors",
                        "enum": ["individual", "entity"],
                        "examples": [
                            "individual",
                            "entity"
                        ]
                    }
                },
                "orcid": {
                    "type": "string",
                    "default": "",
                    "title": "The orcid of the authors",
                    "examples": [
                        "https://orcid.org/0000-0000-0000-0000"
                    ]
                },
                "email": {
                    "type": "string",
                    "default": "",
                    "title": "The email of the authors",
                    "examples": [
                        "someone@somewhere.com"
                    ]
                }
            }
        }
    }
}